<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2019-12-02 00:31" author="Anton Alekseev">
        <sql dbms="postgresql" endDelimiter=";">
            CREATE SCHEMA foodbox
        </sql>
    </changeSet>
    
    <changeSet id="2019-12-02 12:14" author="Anton Alekseev">
        <preConditions>
            <not>
                <tableExists tableName="users" schemaName="foodbox"/>
            </not>
        </preConditions>
        <createTable tableName="users" schemaName="foodbox">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USERS"/>
            </column>
            <column name="first_name" type="VARCHAR2(120)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR2(120)">
                <constraints nullable="false"/>
            </column>
            <column name="user_role" type="VARCHAR2(32)">
                <constraints nullable="false"/>
            </column>
            <column name="birthday" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="photo_url" type="VARCHAR2(256)"/>
        </createTable>
        <rollback>
            <dropTable tableName="users" schemaName="foodbox"/>
        </rollback>
    </changeSet>

    <changeSet id="2019-12-02 13:15" author="Anton Alekseev">
        <preConditions>
            <not>
                <tableExists tableName="user_creds" schemaName="foodbox"/>
            </not>
        </preConditions>
        <createTable tableName="user_creds" schemaName="foodbox">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USER_CREDS"/>
            </column>
            <column name="password" type="VARCHAR2(120)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="user_creds" schemaName="foodbox"/>
        </rollback>
    </changeSet>

    <changeSet id="2019-12-02 13:32" author="Anton Alekseev">
        <addForeignKeyConstraint baseTableName="user_creds" baseTableSchemaName="foodbox" baseColumnNames="id"
                                 constraintName="fk_user_creds" referencedTableName="users"
                                 referencedTableSchemaName="foodbox" referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="user_creds" baseTableSchemaName="foodbox" constraintName="fk_user_creds"/>
        </rollback>
    </changeSet>

    <changeSet id="2019-12-02 17:11" author="Anton Alekseev">
        <preConditions>
            <not>
                <tableExists tableName="phones" schemaName="foodbox"/>
            </not>
        </preConditions>
        <createTable tableName="phones" schemaName="foodbox">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PHONES"/>
            </column>
            <column name="phone_number" type="VARCHAR2(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="country_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_confirmed" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="phones" schemaName="foodbox"/>
        </rollback>
    </changeSet>

    <changeSet id="2019-12-02 17:31" author="Anton Alekseev">
        <addForeignKeyConstraint baseTableName="phones" baseTableSchemaName="foodbox" baseColumnNames="id"
                                 constraintName="fk_users_phones" referencedTableName="user_creds"
                                 referencedTableSchemaName="foodbox" referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="phones" baseTableSchemaName="foodbox" constraintName="fk_user_creds"/>
        </rollback>
    </changeSet>

    <changeSet id="2019-12-02 17:36" author="Anton Alekseev">
        <preConditions>
            <not>
                <tableExists tableName="emails" schemaName="foodbox"/>
            </not>
        </preConditions>
        <createTable tableName="emails" schemaName="foodbox">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EMAILS"/>
            </column>
            <column name="email" type="VARCHAR2(120)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="is_subscribed" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_confirmed" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="emails" schemaName="foodbox"/>
        </rollback>
    </changeSet>

    <changeSet id="2019-12-02 17:37" author="Anton Alekseev">
        <addForeignKeyConstraint baseTableName="emails" baseTableSchemaName="foodbox" baseColumnNames="id"
                                 constraintName="fk_users_emails" referencedTableName="users"
                                 referencedTableSchemaName="foodbox" referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="emails" baseTableSchemaName="foodbox" constraintName="fk_user_creds"/>
        </rollback>
    </changeSet>
</databaseChangeLog>